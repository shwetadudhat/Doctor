                            android:background="@drawable/calander_button"
                            android:layout_width="70dp"
                            android:layout_height="70dp">

                        </ImageView>

                        <TextView
                            android:textSize="@dimen/_10sdp"
                            android:fontFamily="@font/poppins_medium"
