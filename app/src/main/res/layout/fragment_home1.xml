<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradientbg"
    android:layout_height="match_parent">



    <LinearLayout
        android:id="@+id/ll_head"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:weightSum="2"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:layout_weight="1.5"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"
            android:fontFamily="@font/poppins_medium"
            android:text="Home"
            android:id="@+id/tv_name"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:layout_gravity="right"
            android:src="@drawable/herat"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="@dimen/_25sdp"

        android:background="@drawable/uper_corner_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_head"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:paddingRight="@dimen/_20sdp"
            android:paddingLeft="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_170sdp">

            <!--android:background="@drawable/home1"-->
            <LinearLayout
                android:paddingLeft="@dimen/_25sdp"
                android:background="@drawable/home1"
                android:orientation="vertical"
                android:id="@+id/ll_main"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp">

                <TextView
                    android:id="@+id/tv_name1"
                    android:paddingTop="@dimen/_10sdp"
                    android:gravity="center|left"
                    android:layout_gravity="center|left"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Dr. Saif Al-Smadi"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_marginTop="@dimen/_2sdp"
                    android:orientation="horizontal"
                    android:src="@drawable/herat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/clinic_location"
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_14sdp"/>

                    <TextView
                        android:id="@+id/tv_location"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/_7sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Ophthalmologist"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>



                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:src="@drawable/herat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/clinic_type"
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_14sdp"/>

                    <TextView
                        android:id="@+id/tv_type"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/_7sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="The Laser Clinic - Amman"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>



                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/_64sdp"
                android:layout_below="@id/ll_main"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/rectangle_50"
                android:orientation="horizontal"
                android:id="@+id/ll_main2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_22sdp">

                <TextView
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/_25sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Coins Balance"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:paddingRight="@dimen/_25sdp"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_20sdp"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:src="@drawable/herat"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/coins"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_10sdp"/>

                    <TextView
                        android:id="@+id/tv_coin"
                        android:gravity="center"
                        android:layout_gravity="center"

                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="10000"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>



                </LinearLayout>





            </LinearLayout>

            <ImageView
                android:layout_alignParentBottom="true"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:background="@drawable/calander_button"
                />


        </RelativeLayout>

        <LinearLayout
            android:paddingRight="@dimen/_20sdp"
            android:paddingLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical"
            android:id="@+id/ll_slider"
            android:layout_below="@id/ll_main"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_140sdp">

            <RelativeLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="1">

                <LinearLayout
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:background="@color/fully_transparent"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:orientation="horizontal"
                    android:id="@+id/SliderDots"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:elevation="@dimen/_100sdp"
                    android:minWidth="@dimen/_40sdp"
                    />


                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:paddingRight="@dimen/_15sdp"
            android:paddingLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_below="@+id/ll_slider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp">

            <LinearLayout
                android:background="@drawable/cardback"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_85sdp">

